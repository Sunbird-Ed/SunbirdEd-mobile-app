{
  "allowSyntheticDefaultImports": true,
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "types": [
      "node",
      "reflect-metadata",
      "jest"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@app/*": ["*"],
      "sunbird-sdk": ["../node_modules/@project-sunbird/sunbird-sdk"],
      "sunbird-sdk/*": ["../node_modules/@project-sunbird/sunbird-sdk/*"],
      "@project-sunbird/sunbird-player-sdk-v8": ["../node_modules/@project-sunbird/sunbird-video-player-v8/node_modules/@project-sunbird/sunbird-player-sdk-v8"],
      "@project-sunbird/sunbird-player-sdk-v8/*": ["../node_modules/@project-sunbird/sunbird-video-player-v8/node_modules/@project-sunbird/sunbird-player-sdk-v8/*"],
      "@project-sunbird/common-consumption": ["../node_modules/@project-sunbird/common-consumption-v8"],
      "@project-sunbird/common-consumption/*": ["../node_modules/@project-sunbird/common-consumption-v8/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "./typings/*.d.ts",
    "./content-player/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "src/**/*.spec.data.ts",
    "src/**/__tests__/*.ts"
  ]
}
